<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>JustCLI</Title>
    <Version>0.0.11-alpha</Version>
    <Authors>Sebastian Bathrick</Authors>
    <Description>A lightweight CLI framework.</Description>
    <PackageProjectUrl>https://github.com/SebastianBathrick/JustCLI/</PackageProjectUrl>
    <PackageOutputPath>Release</PackageOutputPath>
    <AssemblyVersion>$(PackageVersion)</AssemblyVersion>
    <FileVersion>$(PackageVersion)</FileVersion>
    <PackageId>JustCLInterface</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Serilog" Version="4.2.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="6.0.0" />
  </ItemGroup>

</Project>
